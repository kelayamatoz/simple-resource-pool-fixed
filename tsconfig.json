{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "Node",
    "newLine": "crlf",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "paths": {
      "@app/*": ["./src/*"]
    },
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "es3",
    "lib": [
      "es2015",
      "webworker"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
